	<name>PowerTools Desktop X 3.0.11.1 (R1)</name>
	
	<!-- An application version designator.  Must be three integers between 0-999 and separated by "." Required. -->
	<versionNumber>3.0.11</versionNumber>
	
	<versionLabel>v3.0.11.1 (HEAD)</versionLabel>
	
	<supportedProfiles>extendedDesktop desktop</supportedProfiles> 

	<!-- Description, displayed in the AIR application installer.
	     May have multiple values for each language. See samples or xsd schema file. Optional. -->
	<description>PowerTools Desktop X 3.0.11.1 (R1) Build: 0</description>

	<!-- Copyright information. Optional -->
	<copyright>2015 somecompany, Inc.</copyright>

	<!-- Settings for the application's initial window. Required. -->
	<initialWindow>
		<!-- The main SWF or HTML file of the application. Required. -->
		<!-- Note: In Flash Builder, the SWF reference is set automatically. -->
		<content>PowerToolsDesktop.swf</content>
		<title>PowerTools Desktop X</title>
		<systemChrome>none</systemChrome>
		<transparent>true</transparent>
		<width>1024</width>
		<height>700</height>
		<x>20</x>
		<y>20</y>
		<autoOrients>false</autoOrients>
        <fullScreen>false</fullScreen>
        <visible>false</visible>
